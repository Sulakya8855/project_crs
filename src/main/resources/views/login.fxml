<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox styleClass="container"
      alignment="CENTER"
      spacing="15"
      stylesheets="/styles/style.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.crs.controller.LoginController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label styleClass="title" text="Course Registration System"/>
    <Label text="Login to your account" style="-fx-font-size: 14px;"/>

    <TextField fx:id="usernameField"
               styleClass="input-field"
               promptText="Username"/>

    <PasswordField fx:id="passwordField"
                   styleClass="input-field"
                   promptText="Password"/>

    <Label fx:id="errorLabel"
           styleClass="error-label"
           wrapText="true"/>

    <Button text="Login"
            onAction="#handleLogin"
            styleClass="button"/>

    <Button text="Create new account"
            onAction="#showRegister"
            styleClass="link-button"/>
</VBox>